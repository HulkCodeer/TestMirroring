# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

#target 'evInfra' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
use_frameworks!

def shared_pods
  # Architecture
  pod 'ReactorKit'
  
  # Networking
  pod 'RxAlamofire'
  
  # JSON Mapping
  pod 'SwiftyJSON'
  pod 'HandyJSON'
  
  # UI
  pod 'ReusableKit', :git => 'https://github.com/devxoul/ReusableKit', :branch => 'master'
  pod 'FSPagerView'
  pod 'Then'
  pod 'Material', '~> 2.0'
  pod 'MaterialComponents/Snackbar'
  pod 'MaterialComponents/BottomSheet'
  pod 'UIImageCropper'
  pod 'M13Checkbox'                   # For material checkbox
  pod 'DropDown'                      # For spinner
  pod 'EasyTipView', '~> 2.1.0'
  pod 'PanModal'
  pod 'JJFloatingActionButton'
  pod 'DLRadioButton', '~> 1.4'
  pod 'TTGTagCollectionView'
  
  # Auto Layout
  pod 'SnapKit', '~> 5.0.0'
  
  # Rx Extensions
#  pod 'RxCoreLocation', :git => 'https://github.com/RxSwiftCommunity/RxCoreLocation.git', :branch => 'master'
  pod 'RxSwift', '6.5.0'
  pod 'RxCocoa', '6.5.0'
  pod 'RxViewController'
  pod 'RxDataSources', '~> 5.0'
    
  # Firebase
  pod 'Firebase/Core'                 # For firebase Core
  pod 'Firebase/Messaging'            # For firebase Messaging
  pod 'FirebaseCrashlytics'           # For firebase Crashlytics
  pod 'Firebase/Analytics'
  pod 'Firebase/DynamicLinks'
  
  # Image
  pod 'AlamofireImage', '~> 4.1'
  pod 'SDWebImage/GIF'
  pod 'SwiftyGif'
  
  # SQLite
  pod 'GRDB.swift', '5.11.0'
      
  # Keychain
  pod 'KeychainSwift', '~> 13.0'      # For keychain
  
  # Formmater
  pod 'AnyFormatKit'
  
  # Map
  pod 'NMapsMap'
  
  pod 'Amplitude', '~> 8.8.0'
  
end

target 'evInfra' do
    shared_pods
end

target 'evInfra_dev' do
    shared_pods
end

target 'evInfra_release' do
    shared_pods
end

post_install do |installer|
    installer.pods_project.build_configurations.each do |config|
        config.build_settings.delete('CODE_SIGNING_ALLOWED')
        config.build_settings.delete('CODE_SIGNING_REQUIRED')
    end
end
